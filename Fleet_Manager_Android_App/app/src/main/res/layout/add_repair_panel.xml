<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/moloft"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Dodaj naprawe"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:textColor="@color/text"
        android:fontFamily="@font/clash_display_semi_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pojazd"
        android:layout_marginTop="16dp"
        android:textColor="@color/text"
        android:fontFamily="@font/clash_display_medium"/>

    <EditText
        android:id="@+id/vehicleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wpisz..."
        android:textSize="12dp"
        android:inputType="text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Problem"
        android:layout_marginTop="16dp"
        android:textColor="@color/text"
        android:fontFamily="@font/clash_display_medium"/>

    <EditText
        android:id="@+id/problemEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wpisz..."
        android:textSize="12dp"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opis"
        android:layout_marginTop="16dp"
        android:textColor="@color/text"
        android:fontFamily="@font/clash_display_medium"/>

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wpisz..."
        android:textSize="12dp"
        android:inputType="textMultiLine"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data"
        android:layout_marginTop="16dp"
        android:textColor="@color/text"
        android:fontFamily="@font/clash_display_medium"/>

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wpisz..."
        android:textSize="12dp"
        android:inputType="datetime"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/addRepairButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj naprawÄ™"
        android:layout_marginTop="16dp"/>

</LinearLayout>
