<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/moloft"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wpisz stan licznika:"
        android:textAppearance="@style/ClashDisplayFontMediumStyle"
        android:textSize="18sp"
        android:id="@+id/textViewKilometers"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/editTextKilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:textAppearance="@style/ClashDisplayFontMediumStyle"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/textViewFuelLevel"
        android:textAppearance="@style/ClashDisplayFontMediumStyle"
        android:text="Wpisz stan paliwa:"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editTextFuelLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAppearance="@style/ClashDisplayFontMediumStyle"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <!-- Przycisk previous -->
        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/arrow_left_button" />

        <!-- Przycisk next -->
        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/arrow_right_button" />

    </LinearLayout>

</LinearLayout>
