<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/moloft"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Panel napraw -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Panel napraw"
        android:textAppearance="@style/ClashDisplayFontSemiBoldStyle"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="61dp" />

    <!-- Nowy LinearLayout dla przycisków -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- Przycisk "Dodaj naprawę" -->
        <Button
            android:id="@+id/addRepairButtonToPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@drawable/main_button" />

        <!-- Przycisk "Zmień status naprawy" -->
        <Button
            android:id="@+id/repairStatusButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@drawable/main_button" />

        <!-- Przycisk "Status pojazdów" -->
        <Button
            android:id="@+id/vehicleStatusButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@drawable/main_button" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
